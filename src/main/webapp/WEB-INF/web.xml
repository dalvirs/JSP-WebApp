
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>Assignment</servlet-name>
		<description></description>
		<servlet-class>ca.bcit.comp3601.Assignment_02</servlet-class>

		<init-param>
			<param-name>DATABASE_DRIVER</param-name>
			<param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
		</init-param>
		<init-param>
			<param-name>URL</param-name>
			<param-value>jdbc:sqlserver://Beangrinder.bcit.ca</param-value>
		</init-param>
		<init-param>
			<param-name>USER</param-name>
			<param-value>javastudent</param-value>
		</init-param>
		<init-param>
			<param-name>PASSWORD</param-name>
			<param-value>compjava</param-value>
		</init-param>

	</servlet>
	<servlet-mapping>
		<servlet-name>Assignment</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>